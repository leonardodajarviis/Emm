{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=EAM;Trusted_Connection=False;TrustServerCertificate=True;"
  },
  "AllowedHosts": "*",
  "ErrorHandling": {
    "IncludeExceptionDetails": false,
    "MaxExceptionDepth": 3,
    "IncludeStackTrace": false
  },
  "Jwt": {
    "AccessKey": "change-me-in-environment-variables",
    "RefreshKey": "change-me-in-environment-variables",
    "AccessExpiresIn": 12000,
    "RefreshExpiresIn": 8600,
    "IsMultiDeviceLoginAllowed": false
  },
  "LocalFileStorage": {
    "RootPath": "wwwroot/uploads",
    "BaseUrl": "/files",
    "MaxFileSize": 52428800,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".bmp", ".webp", ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx", ".txt", ".zip", ".rar"],
    "ValidateFileType": true
  },
  "StmpEmail": {
    "From": "noreply@example.com",
    "Host": "smtp.office365.com",
    "Port": 587,
    "Username": "change-me-in-environment-variables",
    "Password": "change-me-in-environment-variables"
  }
}
