{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=your-server;Database=your-database;Trusted_Connection=False;TrustServerCertificate=True;MultipleActiveResultSets=false;user id=your-username;password=your-password;"
  },
  "AllowedHosts": "*",
  "ErrorHandling": {
    "IncludeExceptionDetails": false,
    "MaxExceptionDepth": 3,
    "IncludeStackTrace": false
  },
  "Jwt": {
    "AccessKey": "your-access-secret-key",
    "RefreshKey": "your-refresh-secret-key",
    "AccessExpiresIn": 12000,
    "RefreshExpiresIn": 8600,
    "IsMultiDeviceLoginAllowed": false
  },
  "LocalFileStorage": {
    "RootPath": "wwwroot/uploads",
    "BaseUrl": "/files",
    "MaxFileSize": 52428800,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".bmp", ".webp", ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx", ".txt", ".zip", ".rar"],
    "ValidateFileType": true
  },
  "StmpEmail": {
    "From": "your-email@example.com",
    "Host": "smtp.your-provider.com",
    "Port": 587,
    "Username": "your-email@example.com",
    "Password": "your-email-password"
  }
}
